<h3>Create a New Invoice</h3><br>

    <div class="container">
        <div class="form-group">
    <%= form_for :invoice do |f| %>
    <%= render partial: 'sessions/errors', locals: {obj: @invoice} %>
    <%= render partial: 'form', locals: {f: f, user: @invoice} %>

    <label> Musician: </label>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= current_user.name %><br>

    <%= f.submit %>
    <% end %>
        </div>
    </div>