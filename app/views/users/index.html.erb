<h3 class="bg-info">Musicians List </h3>
<%= flash[:notice] %><br>
<%= link_to 'Create New User', new_user_path %><br>
<%= link_to 'All Users', users_path %><br>

<%= form_tag users_path, method: :get do %>
<%= label_tag(:query, "Find a Musician:") %>
<%= text_field_tag :query, params[:query], placeholder: 'Search By Name' %>
<%= submit_tag("Search", :name =>nil) %>
<% end %>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Instrument</th>
    <th>Username</th>
    <th>Email</th>
    <th>Admin?</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
<% @users.each do |user| %>
    <tr>
        <td><%= user.name %></td>
        <td><%= user.instrument %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Edit User', edit_user_path(user) %></td>
        <td><%= link_to 'Delete User', user_path(user), data: {confirm: 'Delete this User?'}, method: :delete %></td>
    <tr>
        <% end %>
</table>

<%= link_to 'Main', main_path %><br>
<%= link_to 'All Gigs', gigs_path %>

